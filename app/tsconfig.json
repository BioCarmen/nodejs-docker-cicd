{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2017"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist/",
      "sourceMap": true,
      "allowJs": true,
      "skipLibCheck": true      
   },
   "include": [ "src/*.ts" ],
   "exclude": [ "node_modules" ]
}
